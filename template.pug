                        div(class="fs-12-lh-20 color-secondary pr-10") TIME:
                        div(class="fs-12-lh-20") !{time}
                    div(class="flex-container width-100 pn")
                        div(class="fs-12-lh-20 color-secondary pr-10") BILL TYPE:
                        div(class="fs-12-lh-20") !{pharmaInvoice.billType}
                    div(class="flex-container width-100 pn")
                        div(class="fs-12-lh-20 color-secondary pr-10") PATIENT:
                        div(class="fs-12-lh-20") !{pharmaInvoice.customerName}
                    div(class="flex-container width-100 pn")
                        div(class="fs-12-lh-20 color-secondary pr-10") DOCTOR:
                        div(class="fs-12-lh-20") !{pharmaInvoice.doctorName}
                    div(class="flex-container width-100 pn")
                        div(class="fs-12-lh-20  color-secondary pr-10") SALESPERSON:
                        div(class="fs-12-lh-20 ")
                div(class=" width-100 flex-container flex-direction-column align-items-center pn ")
                    span(class="go") !{orgJson.organizationAccount.accountName}
                    div(class="text-secondary width-70-per pn text-align-center color-secondary ") !{orgJson.permanentAddress.address_line_1}, !{orgJson.permanentAddress.address_line_2 }, !{orgJson.permanentAddress.address_line_3}, !{orgJson.permanentAddress.address_line_4 }
