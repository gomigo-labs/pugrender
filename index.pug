    div(class="div-center bg-f7f7f7")
        div(class="body-center height-100 width-100 monst bg-white position-relative")
            div(class="flex-container")
                if invoiceJsonData.invoiceLogo && invoiceJsonData.invoiceLogo.length > 0
                    div(class=" marginLeft-10")
                        img(src=invoiceJsonData.invoiceLogo height="135px" width="135px ")
                div(class=" width-100 ml-10")
                    div(class="monst mt-10")
                        span(class="go") !{orgJson.businessName}
                    div(class="monst mt-10  width-100")
                        div(class="text-secondary width-100") !{orgJson.permanentAddress.address_line_1},
                        div(class="text-secondary width-100") !{orgJson.permanentAddress.address_line_2 },

                    div(class="mt-10")
                        span(class="label") Email:
                        span(class="text-secondary label-Padding") !{orgJson.email}
                        span(class="label") PHONE:
                        span(class="text-secondary label-Padding") !{orgJson.organizationAccount.mobileNo}
                        span(class="label") GSTIN:
                        span(class="text-secondary label-Padding") !{orgJson.GSTIN}
                div(class="width-100 pn qr-code ")
                  img(src=invoiceQr height="135px" width="135px ")
                  div(class="fs-12-lh-20 width-70-per pn mr-10") !{invoiceJsonData.customerUpiId || " "}

            div(class="black-strip mt-10")
            div(class="flex bg-e2e2e2 ph-10")
                div(class="width-100 ph-10")
                    div(class="h-20px") Invoice Number
                    div(class="h-20px") !{invoiceJsonData.invoiceNumber}
                div(class="width-100 ph-10")
                    div(class="h-20px") Invoice Date
                    div(class="h-20px") !{invoiceDate}
                div(class="width-100 ph-10")
                    div(class="h-20px") Due Date
                    div(class="h-20px") !{dueDate}
            div(class="flex-container mt-10 align-items-start")
                div(class="width-100 ph-10 fs-12-lh-20")
                    div(class="bold") BILL TO
                    div(class="go fs-12") !{invoiceJsonData.customerName}
                    if invoiceJsonData.customerAddress.billingAddress.addressLine1
                      div(class="fs-12-lh-20 width-90-per") !{invoiceJsonData.customerAddress.billingAddress.addressLine1},
                    if invoiceJsonData.customerAddress.billingAddress.addressLine2
                      div(class="fs-12-lh-20 width-90-per") !{invoiceJsonData.customerAddress.billingAddress.addressLine2},
                    div() !{invoiceJsonData.customerAddress.billingAddress.state}, !{invoiceJsonData.customerAddress.shippingAddress.city},!{invoiceJsonData.customerAddress.billingAddress.zipCode}
                div(class="width-100 ph-10 px-10 fs-12-lh-20")
                    div(class="bold") SHIP TO
                    div(class="go fs-12") !{invoiceJsonData.customerName}
                    if invoiceJsonData.customerAddress.shippingAddress.addressLine1
                      div(class="fs-12-lh-20 width-90-per") !{invoiceJsonData.customerAddress.shippingAddress.addressLine1},
                    if invoiceJsonData.customerAddress.shippingAddress.addressLine2
                      div(class="fs-12-lh-20 width-90-per") !{invoiceJsonData.customerAddress.shippingAddress.addressLine2},
                    div(class="fs-12-lh-20") !{invoiceJsonData.customerAddress.shippingAddress.state},!{invoiceJsonData.customerAddress.shippingAddress.city}, !{invoiceJsonData.customerAddress.shippingAddress.zipCode}
                    div(class="flex-container pn")
                        div(class="fs-12-lh-20 pr-10 bold") GSTIN:
                        div(class="fs-12-lh-20") !{invoiceJsonData.customerGSTIN}
                div(class="width-100 flex align-items-start")
                    div()
                        div(class="flex-container pn")
                            div(class="bold mr-5 fs-12-lh-20") PO Bill No:
                            div(class="fs-12-lh-20") !{invoiceJsonData.orderNo}
                        div(class="flex-container pn")
                            div(class="fs-12-lh-20 pr-10 bold") Vehicle No:
                            div(class="fs-12-lh-20") !{invoiceJsonData.vehicleNo}
                        div(class="flex-container pn")
                            div(class="fs-12-lh-20 pr-10 bold") E-way Bill No:
                            div(class="fs-12-lh-20") !{invoiceJsonData.eWayBillNo}
            div(class="flex mt-10 black-border")
                div(class="width-200 ")
                    div(class="bold fs-10") ITEMS
                div(class="width-100 ")
                    div(class="bold fs-10 ") HSN
                div(class="width-100 ")
                    div(class="bold fs-10 ") QTY
                div(class="width-100 ")
                    div(class="bold fs-10 ") RATE
                div(class="width-100 ")
                    div(class="bold fs-10 ") UOM
                div(class="width-100 ")
                    div(class="bold fs-10 ") DISC.(%)
                div(class="width-100 ")
                    div(class="bold fs-10 ") TAX
                div(class="width-100 ")
                    div(class="bold fs-10 ") AMT.
            div(class="table-height")
              each val in lineItems
                  
                  div#demo.collapse(class=val.batch? 'flex bb-grey': "flex bb-grey height-60 serial")
                      if val.batch
                        div(class="flex-align width-200 pn pl-10")
                            div(class="fs-12") !{val.itemName}
                            div(class="fs-10 color-secondary") !{val.batch}
                      else 
                        div(class="flex-align width-200 pn pl-10 serial")
                            div(class="fs-12") !{val.itemName}
                            div(class="fs-10 color-secondary width-95-per") !{val.serialNos.join(", ")}

                      div(class="width-100 flex-align pn")
                          div(class="fs-10") !{val.itemHsnOrSac}
                          div(class="width-100 ")
                      div(class="width-100 flex-align pn")
                          div(class="fs-10") !{val.itemQty}
                          div(class="width-100 ")
                      div(class="width-100 flex-align pn")
                          div(class="fs-10") !{val.itemPrice}
                          div(class="width-100 ")
                      div(class="width-100 flex-align pn")
                          div(class="fs-10") !{val.uom}
                          div(class="width-100 ")
                      div(class="width-100 flex-align pn")
                          div(class="fs-10") !{val.discount}
                          div(class="width-100 ")
                      div(class="width-100 flex-align pn")
                          div(class="fs-10") !{Number(val.itemAmount - val.taxableAmount).toFixed(2)}
                          div(class="width-100 fs-10 color-secondary") (!{val.itemTax} %)
                      div(class="width-100 flex-align pn pr-10")
                          div(class="fs-10") !{val.itemAmount}
                          div(class="width-100 ")
            div(class="m-t-40 flex mt-10 black-border")
                div(class="width-100 ")
                    div(class="bold fs-10")
                div(class="width-100 ")
                    div(class="bold fs-10 ")
                div(class="width-100 ")
